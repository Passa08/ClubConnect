<!DOCTYPE html>
<html>
<head>
  <title>Available Campaigns</title>
</head>
<body>
  <h1>Available Volunteer Campaigns</h1>

  <% if (user) { %>
    <p>Logged in as: <strong><%= user.name %></strong> (<%= user.role %>)</p>
    <a href="/">Home</a> | <a href="/logout">Logout</a>
  <% } else { %>
    <a href="/login">Login</a> | <a href="/register">Register</a>
  <% } %>

  <hr>

  <% if (campaigns.length === 0) { %>
    <p>No campaigns available right now.</p>
  <% } else { %>
    <ul>
      <% campaigns.forEach(c => { %>
        <li>
          <h2><%= c.title %></h2>
          <p><%= c.description %></p>
          <p><strong>Club:</strong> <%= c.Club.name %></p>
          <p><strong>Date:</strong> <%= c.date %></p>
          <a href="https://wa.me/<%= c.Club.contact_whatsapp %>?text=I'm interested in volunteering for <%= c.title %>" target="_blank">
            Join via WhatsApp
          </a>
        </li>
        <hr>
      <% }) %>
    </ul>
  <% } %>
</body>
</html>
